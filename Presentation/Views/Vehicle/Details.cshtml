@model Business.DTOs.GetVehicleDTO

@{
    ViewData["Title"] = "Details";
    Layout = "_DashboardLayout";
}

<div>
    <a asp-action="List">Back</a>
</div>
<h1>Details</h1>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Image" class="img-fluid" alt="Vehicle Image" style="width: 100%; height: 250px; object-fit: contain">
        </div>
        <div class="col-md-6">
            <h1>@Model.Model @Model.Name</h1>
            <p><strong>Year:</strong> @Model.Year</p>
            <p><strong>Type:</strong> @Model.Type</p>
            <p><strong>Color:</strong> @Model.Color</p>
            <p><strong>Price:</strong> &pound;@Model.Price/Day</p>
            <p><strong>Location:</strong> @Model.Location</p>
            <p><strong>Description:</strong> @Model.Description</p>
        </div>
    </div>
</div>

