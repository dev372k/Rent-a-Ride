@using Data.Commons
@model DashboardModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_DashboardLayout";
}

<style>
    /* Card Styles */
    .card {
        display: flex;
        align-items: center;
        width: 300px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        padding: 20px;
        margin: 20px;
    }

    .card-icon {
        font-size: 48px;
        color: #007bff; /* blue color */
        margin-right: 20px;
    }

    .card-content {
        flex: 1;
    }

    .card-value {
        font-size: 20px;
        /* font-weight: bold; */
        margin-bottom: 5px;
    }

    .card-text {
        font-size: 16px;
        color: #666;
    }
</style>


<div class="row">
    @{
        if(User.IsInRole(enRole.Admin.ToString()))
        {
            <div class="col-md-4">
                <div class="card">
                    <div>
