@model X.PagedList.IPagedList<Business.DTOs.GetUserDTO>
@using Data.Commons
@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "Users";
    Layout = "_DashboardLayout";
}

<h1>Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Role
            </th>
            <th>
                Status
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @((enRole)@item.Role)
                </td>
                <td>
                    <div class="form-check form-switch">
                        <form action="@Url.Action("UpdateStatus","Account")" method="post" id="form">
                            <input name="userId" value="@item.Id" hidden />
                            @{
                                if (item.IsDeleted)
                                {
                                    <input name="status" class="form-check-input" type="checkbox" role="switch" checked onchange="$('#form').submit()">
                                }
                                else
                                {
                                    <input name="status" class="form-check-input" type="checkbox" role="switch" onchange="$('#form').submit()">
                                }
                            }
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="">
    @if (Model.Count() > 0)
    {
        <span>Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</span>
        <span>@Html.PagedListPager(Model, page => Url.Action("Booking", new { pageNumber = page }))</span>
    }
</div>